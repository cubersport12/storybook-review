{
  "env": {
    "browser": true,
    "es2021": true
  },
  "parser": "@typescript-eslint/parser",
  "extends": [
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "project": ["./tsconfig.eslint.json"] // Specify it only for TypeScript files
  },
  "plugins": [
    "react",
    "prettier"
  ],
  "rules": {
    "@typescript-eslint/promise-function-async": 0,
    "@typescript-eslint/no-misused-promises": 0,
    "prettier/prettier": [
      "error",
      {
        "tabWidth": 2,
        "singleQuote": true,
        "quoteProps": "consistent",
        "trailingComma": "none",
        "bracketSpacing": true,
        "arrowParens": "avoid",
        "semi": true,
        "printWidth": 150,
        "endOfLine": "auto"
      }
    ]
  }
}
